@using Web.ViewModels
@section topCSS
{
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/homepage.css?v=202408211924" rel="stylesheet" />
}


<div class="container px-5">
    <div class="row">
        <!-- 左邊欄位 -->
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h5 class="text-center">請輸入您的電子信箱來登入</h5>
            <form>
                <div class="mb-3">
                    <label for="loginEmail" class="form-label">電子信箱</label>
                    <input type="email" class="form-control" id="loginEmail" placeholder="happ@example.com" required>
                </div>
                <button type="submit" class="btn btn-success w-100">確認</button>
            </form>
            <hr>
            <p class="text-center">或</p>
            <button class="btn btn-outline-secondary mb-3 w-100">
                <img src="~/image/mainpage_imgs/google.png" alt="Google" style="width:20px; height:20px; margin-right:10px;">
                以 Google 登入
            </button>
            <button class="btn btn-outline-secondary mb-3 w-100">
                <img src="~/image/mainpage_imgs/line.png" alt="LINE" style="width:20px; height:20px; margin-right:10px;">
                以 LINE 登入
            </button>
        </div>

        <!-- 右邊欄位 -->
        <div class="col-md-6 d-flex flex-column justify-content-center mt-3">
            <p>尚未註冊過，請註冊</p>
            <form id="registerForm">
                <div class="mb-3">
                    <label for="name" class="form-label">名字</label>
                    <input type="text" class="form-control" id="name" placeholder="名字" required>
                    <p id="nameError" class="error-message text-danger" style="display:none;">不可為空</p>
                </div>
                <div class="mb-3">
                    <label for="registerEmail" class="form-label">信箱</label>
                    <input type="email" class="form-control" id="registerEmail" placeholder="信箱" required>
                    <p id="emailError" class="error-message text-danger" style="display:none;">不可為空</p>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">密碼</label>
                    <input type="password" class="form-control" id="password" placeholder="密碼(至少八個字元)" required>
                    <p id="passwordError" class="error-message text-danger" style="display:none;">不可為空</p>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="form-label">確認密碼</label>
                    <input type="password" class="form-control" id="confirmPassword" placeholder="確認密碼" required>
                    <p id="confirmPasswordError" class="error-message text-danger" style="display:none;">不可為空</p>
                </div>
                <button type="submit" class="btn btn-primary w-100">註冊</button>
                <p class="text-center text-muted small mt-3">
                    繼續操作表示您同意我們的 <a href="#">服務條款</a>，請參閱我們的 <a href="#">隱私權政策</a>。
                </p>
            </form>
        </div>
    </div>
</div>



@section endJS
    {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="~/js/homepage.js"></script>
}
