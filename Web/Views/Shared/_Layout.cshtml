<body>
    <header class="mb-5">
        <nav class="navbar navbar-expand-md navbar-light bg-light fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="https://TalkingTopia的首頁">
                    <img src="~/image/logo_imgs/TalkingTopia logo_final.png" alt="Logo" width="125"
                         class="d-inline-block align-text-top">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- 將搜尋欄位移出collapse -->
                <ul class="navbar-nav mx-1">
                    <li class="nav-item search-teacher">
                        <form class="d-flex">
                            <div class="input-container">
                                <input class="form-control" type="search" placeholder="搜尋課程" aria-label="Search">
                            </div>
                        </form>
                    </li>
                </ul>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">推薦課程</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="courseMenu" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                選擇課程
                            </a>
                            <div class="dropdown-menu mega-menu p-3" aria-labelledby="courseMenu">
                                <div class="row">
                                    <!-- 第一欄 -->
                                    <div class="col-4 first-column">
                                        <ul class="list-unstyled">
                                            <li><a href="#" data-target="language-learning">語言學習</a></li>
                                            <li><a href="#" data-target="programming-language">程式設計</a></li>
                                            <li><a href="#" data-target="academic">升學科目</a></li>
                                        </ul>
                                    </div>

                                    <!-- 第二欄 (動態顯示的內容) -->
                                    <div class="col-4 second-column">
                                        <div class="sub-menu language-learning">
                                            <ul class="list-unstyled">
                                                <li class="dropdown-menu-item"><a href="#">英文</a></li>
                                                <li class="dropdown-menu-item"><a href="#">日文</a></li>
                                                <li class="dropdown-menu-item"><a href="#">中文</a></li>
                                                <li class="dropdown-menu-item"><a href="#">德文</a></li>
                                                <li class="dropdown-menu-item"><a href="#">法文</a></li>
                                                <li class="dropdown-menu-item"><a href="#">西班牙文</a></li>
                                            </ul>
                                        </div>
                                        <div class="sub-menu programming-language">
                                            <ul class="list-unstyled">
                                                <li class="dropdown-menu-item"><a href="#">HTML/CSS</a></li>
                                                <li class="dropdown-menu-item"><a href="#">JavaScript</a></li>
                                                <li class="dropdown-menu-item"><a href="#">C#</a></li>
                                                <li class="dropdown-menu-item"><a href="#">SQL</a></li>
                                                <li class="dropdown-menu-item"><a href="#">Python</a></li>
                                                <li class="dropdown-menu-item"><a href="#">Java</a></li>
                                            </ul>
                                        </div>
                                        <div class="sub-menu academic">
                                            <ul class="list-unstyled">
                                                <li class="dropdown-menu-item"><a href="#">數學</a></li>
                                                <li class="dropdown-menu-item"><a href="#">物理</a></li>
                                                <li class="dropdown-menu-item"><a href="#">化學</a></li>
                                                <li class="dropdown-menu-item"><a href="#">歷史</a></li>
                                                <li class="dropdown-menu-item"><a href="#">地理</a></li>
                                                <li class="dropdown-menu-item"><a href="#">生物</a></li>
                                            </ul>
                                        </div>
                                    </div>

                                    <!-- 第三欄 (固定顯示內容) -->
                                    <div class="col-4 third-column">
                                        <div class="rating">
                                            <span>5.0 ★</span>
                                            <span>(1,758,545 評價)</span>
                                        </div>
                                        <button class="btn btn-primary btn-block my-3">找英文教師</button>
                                        <ul class="list-unstyled">
                                            <li><a href="#">更多資訊</a></li>
                                            <li><a href="#">英文課程內容</a></li>
                                            <li><a href="#">英文教師新資料</a></li>
                                            <li><a href="#">英文學生學習故事</a></li>
                                            <li><a href="#">英文學生評價內容</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </li>

                    </ul>
                    
                    <ul class="navbar-nav ms-auto">
                        @if (ViewData["IsLoggedIn"] != null && (bool)ViewData["IsLoggedIn"])
                        {
                            <!-- 登入後的選單 -->
                            <li class="nav-item">
                                <a class="nav-link" href="/TeacherSystem">教師系統</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/WatchList">關注列表</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Logout">登出</a>
                            </li>
                            <li class="nav-item shopping-bag">
                                <a class="nav-link" href="https://購物車頁面">
                                    <img src="https://fakeimg.pl/20x20/200" alt="">購物車
                                </a>
                            </li>
                            <li class="nav-item message-item">
                                <a class="nav-link" href="">
                                    <i class="fa-regular fa-comments"></i>
                                </a>
                            </li>
                            <li class="nav-item user-item">
                                <a class="nav-link" href="https://會員中心">
                                    <img src="https://fakeimg.pl/20x20/200" alt="">
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- 登入前的選單 -->
                            <li class="nav-item">
                                <a class="nav-link" href="/Tutor/Index">成為教師</a>
                            </li>
                           @*  <li class="nav-item">
                                <a class="nav-link" href="#" data-bs-toggle="modal" data-bs-target="#loginModal">登入/註冊</a>
                            </li> *@
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Account", "Home")">登入/註冊</a>
                            </li>
                            <li class="nav-item message-item">
                                <a class="nav-link" href="">
                                    <i class="fa-regular fa-comments"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>





        

    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>
