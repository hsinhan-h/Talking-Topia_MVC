<body>
    <header class="mb-5">
        <partial name="_NavbarPartial" />

    </header>

    <main role="main" class="pb-3">
        @RenderBody()
        <partial name="_DifyAIPartial" />
    </main>
    <footer class="lh-layout-footer mt-5">
        <div class="lh-layout-footer-container">
            <div class="lh-layout-footer-linkGroup col-12 col-md-12">
                <div class="lh-layout-footer-link col-12 col-md-3">
                    <h5>熱門頁面</h5>
                    <ul>
                        <li><a href="#">語言學習</a></li>
                        <li><a href="#">程式設計</a></li>
                        <li><a href="#">升學科目</a></li>
                    </ul>
                </div>
                <div class="lh-layout-footer-link col-12 col-md-3">
                    <h5>工作機會</h5>
                    <ul>
                        <li><a href="#">加入 TalkingTopia</a></li>
                        <li><a href="#">找學生</a></li>
                        <li><a href="#">成為教師</a></li>
                        <li><a href="#">家教費用資訊</a></li>
                        <li><a href="#">聯盟行銷計畫</a></li>
                    </ul>
                </div>
                <div class="lh-layout-footer-link col-12 col-md-3">
                    <h5>TalkingTopia</h5>
                    <ul>
                        <li><a href="#">關於我們</a></li>
                        <li><a href="#">部落格</a></li>
                        <li><a href="#">外部學習資源</a></li>
                    </ul>
                </div>
                <!-- 新增 LINE QR Code 區塊 -->
                <div class="lh-layout-footer-link col-12 col-md-3 lh-layout-footer-line">
                    <h5>聯絡我們</h5>
                    <p>TalkingTopia 官方LINE 帳號</p>
                    <img src="~/image/logo_imgs/328eileg.png" alt="LINE QR Code" class="line-qrcode" />
                    <p class="line-account">@@328eileg</p>

                </div>
            </div>
            <div class="lh-layout-footer-bottom">
                <p>© 2024 TalkingTopia Limited.</p>
                <p><a href="#">網站地圖</a>・<a href="#">服務條款</a>・<a href="#">隱私聲明</a></p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/slick-1.8.1/slick/slick.js"></script>
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <script src="~/js/layout.js"></script>
    <script src="~/js/utilities/difysearch.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("endCSS", required: false)
    @await RenderSectionAsync("endJS", required: false)
</body>
</html>
