@model ResetPasswordViewModel

@section topCSS
{
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/resetpassword.css" rel="stylesheet" />
}

<div class="container px-5">
    <div class="row">
        <div class="reset-password-container">
            <h2>重設密碼</h2>
            <form id="resetPasswordForm" asp-controller="Account" asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Token" />

                <div class="form-group mb-3">
                    <input asp-for="NewPassword" class="form-control" id="newPasswordInput" type="password" placeholder="新密碼" />
                    <span asp-validation-for="NewPassword" id="newPasswordError" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <input asp-for="ConfirmPassword" class="form-control" id="confirmPasswordInput" type="password" placeholder="確認新密碼" />
                    <span asp-validation-for="ConfirmPassword" id="confirmPasswordError" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-custom">重設密碼</button>
            </form>
        </div>
    </div>
</div>