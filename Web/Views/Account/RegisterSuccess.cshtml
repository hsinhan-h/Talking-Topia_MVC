@{
    ViewData["Title"] = "註冊成功";
}

<div class="container text-center mt-6">
    <div class="alert alert-success">
        <h4>@TempData["SuccessMessage"]</h4>
        <p id="countdown">6 秒後將自動返回登入畫面...</p>
    </div>
</div>

<script>
    let seconds = 6;
    const countdownElement = document.getElementById("countdown");

    const countdownInterval = setInterval(() => {
        seconds--;
        countdownElement.textContent = `${seconds} 秒後將自動返回登入畫面...`;

        if (seconds === 0) {
            clearInterval(countdownInterval);
            window.location.href = '@Url.Action("Account", "Account")';
        }
    }, 1000);
</script>
