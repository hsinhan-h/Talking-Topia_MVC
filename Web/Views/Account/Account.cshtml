@using Web.ViewModels
@model AccountViewModel

@section topCSS
{
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/homepage.css?v=202408211924" rel="stylesheet" />
}

<div class="container px-5">
    <div class="row">
        <!-- 左邊欄位 -->
        <div class="col-md-6 d-flex flex-column justify-content-center">
            <h5 class="text-center">請輸入您的電子信箱來登入</h5>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LoginViewModel.Email"></label>
                    <input asp-for="LoginViewModel.Email" class="form-control" />
                    <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LoginViewModel.Password"></label>
                    <input asp-for="LoginViewModel.Password" class="form-control" type="password" />
                    <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="LoginViewModel.ReturnUrl"></label>
                    <input asp-for="LoginViewModel.ReturnUrl" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">登入</button>
            </form>
            <hr>
            <p class="text-center">或</p>
            <button class="btn btn-outline-secondary mb-3 w-100">
                <img src="~/image/mainpage_imgs/google.png" alt="Google" style="width:20px; height:20px; margin-right:10px;">
                以 Google 登入
            </button>
            <button class="btn btn-outline-secondary mb-3 w-100">
                <img src="~/image/mainpage_imgs/line.png" alt="LINE" style="width:20px; height:20px; margin-right:10px;">
                以 LINE 登入
            </button>
        </div>
        <!-- 右邊欄位 -->
        <div class="col-md-6 d-flex flex-column justify-content-center mt-3">
            <p>尚未註冊過，請註冊</p>
            <form asp-action="Register" method="post">
                <!-- First Name Field -->
                <div class="mb-3">
                    <label asp-for="RegisterViewModel.FirstName" class="form-label">名字</label>
                    <input asp-for="RegisterViewModel.FirstName" class="form-control" placeholder="名字" />
                    <span asp-validation-for="RegisterViewModel.FirstName" class="text-danger"></span>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="RegisterViewModel.Email" class="form-label">信箱</label>
                    <input asp-for="RegisterViewModel.Email" class="form-control" placeholder="信箱" />
                    <span asp-validation-for="RegisterViewModel.Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="RegisterViewModel.Password" class="form-label">密碼</label>
                    <input asp-for="RegisterViewModel.Password" class="form-control" placeholder="密碼" />
                    <span asp-validation-for="RegisterViewModel.Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label asp-for="RegisterViewModel.ConfirmPassword" class="form-label">確認密碼</label>
                    <input asp-for="RegisterViewModel.ConfirmPassword" class="form-control" placeholder="確認密碼" />
                    <span asp-validation-for="RegisterViewModel.ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">註冊</button>

                <!-- Terms and Conditions -->
                <p class="text-center text-muted small mt-3">
                    繼續操作表示您同意我們的 <a href="#">服務條款</a>，請參閱我們的 <a href="#">隱私權政策</a>。
                </p>
            </form>
        </div>
    </div>
</div>



@section endJS
    {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

}
