@using Web.ViewModels
@model AccountViewModel

@section topCSS
{
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/normalize.css" rel="stylesheet" />
    <link href="~/css/homepage.css?v=202408211924" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />

}

<div class="container px-5">
    <div class="row">
        <!-- 左邊欄位 -->
        <div class="login-container">
            <h2>登入</h2>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div> <!-- 用於顯示所有的錯誤訊息 -->

                <div class="form-group">
                    <input asp-for="LoginViewModel.Email" class="form-control" placeholder="電子郵件" />
                    <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="LoginViewModel.Password" class="form-control" type="password" placeholder="密碼" />
                    <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
                </div>

                <a asp-action="ForgotPassword" class="forgot-password">忘記密碼？</a>
                <button type="submit" class="btn btn-custom">登入</button>
            </form>
            <div class="social-login">
                <p>或使用社群帳號登入</p>
                <a href="#" class="google"><i class="fab fa-google"></i></a>

                <a asp-controller="Account" asp-action="LineLogin" class="line"><i class="fab fa-line"></i></a>
            </div>
            <hr>
            <h2>還不是會員？</h2>
            <a asp-controller="Account" asp-action="Register" class="register">註冊會員</a>
        </div>
    </div>
</div>

       
