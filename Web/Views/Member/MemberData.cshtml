    <!-- modal 第一步 -->
    <div class="modal fade" id="step1Modal" tabindex="-1" aria-labelledby="step1Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="step1Label">進階驗證：第一步</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="step1Form">
                        <div class="mb-3">
                            <label for="emailInput" class="col-form-label">請輸入會員電子信箱</label>
                            <input type="email" class="form-control" id="emailInput" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn lh-backstage-submit-btn" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn lh-backstage-submit-btn" onclick="goToStep2()">送出</button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal 第二步 -->
    <div class="modal fade" id="step2Modal" tabindex="-1" aria-labelledby="step2Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="step2Label">進階驗證：第二步</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="step2Form">
                        <div class="mb-3">
                            <label for="verificationCodeInput" class="col-form-label">請輸入驗證碼</label>
                            <input type="tel" class="form-control" id="verificationCodeInput" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn lh-backstage-submit-btn" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn lh-backstage-submit-btn" onclick="goToStep3()">送出</button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal 第三步 -->
    <div class="modal fade" id="step3Modal" tabindex="-1" aria-labelledby="step3Label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="step3Label">進階驗證：第三步</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="step3Form">
                        <div class="mb-3">
                            <label for="currentPasswordInput" class="col-form-label">請輸入目前密碼</label>
                            <input type="password" class="form-control" id="currentPasswordInput" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPasswordInput" class="col-form-label">請輸入欲設定的新密碼</label>
                            <input type="password" class="form-control" id="newPasswordInput" required />
                        </div>
                        <div class="mb-3">
                            <label for="confirmPasswordInput" class="col-form-label">請再輸入一次新密碼</label>
                            <input type="password" class="form-control" id="confirmPasswordInput" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn lh-backstage-submit-btn" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn lh-backstage-submit-btn" onclick="submitPasswordChange()">送出</button>
                </div>
            </div>
        </div>
    </div>

</div>


