                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput7"
                                       value="@Model.Account"
                                       placeholder=""
                                       disabled />
                                <label for="floatingInput7">帳號</label>
                            </div>
                        </div>
                        <!-- 修改密碼按鈕 -->
                        <div class="col-12 col-md-6">
                            <button class="btn lh-backstage-submit-btn mt-2"
                                    data-bs-toggle="modal"
                                    data-bs-target="#step1Modal">
                                修改密碼
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput8"
                                       value="@Model.FirstName"
                                       placeholder=""
                                       disabled />
                                <label for="floatingInput8">名字</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput9"
                                       value="@Model.LastName"
                                       placeholder=""
                                       disabled />
                                <label for="floatingInput9">姓氏</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="form-floating mb-3">
                                <input type="text"
                                       class="form-control"
                                       id="floatingInput1"
                                       value="@Model.Nickname"
                                       placeholder=""
                                       disabled />
                                <label for="floatingInput1">暱稱</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label>性別</label>
                                <div class="d-flex align-items-center">
                                    <div class="form-check me-3">
                                        <!-- 使用 Bootstrap 的 me-3 增加右邊距 -->
                                        <input class="form-check-input"
                                               type="radio"
                                               name="gender"
                                               id="genderMale"
                                               value="1"
                                        @(Model.Gender == "男" ? "checked" : "")
                                               disabled />
                                        <label class="form-check-label" for="genderMale">男性</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input"
                                               type="radio"
                                               name="gender"
                                               id="genderFemale"
                                               value="2"
                                        @(Model.Gender == "女" ? "checked" : "")
                                               disabled />
                                        <label class="form-check-label" for="genderFemale">女性</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-12 col-md-4">
                            <div class="form-floating mb-3">
                                <input type="date" class="form-control" id="floatingInput2"
                                       value="@(Model.Birthday.HasValue ? Model.Birthday.Value.ToString("yyyy-MM-dd") : "")"
                                       min="1753-01-01"
                                       disabled />

                                <label for="floatingInput2">生日</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-floating mb-3">
                                <input type="email"
                                       class="form-control"
                                       id="floatingInput10"
                                       value="@Model.Email"
                                       placeholder="name@example.com"
                                       disabled />
                                <label for="floatingInput10">電子信箱</label>
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <div class="form-floating mb-3">
                                <input type="tel"
                                       class="form-control"
                                       id="floatingInput11"
                                       value="@Model.Phone"
                                       placeholder=""
                                       disabled />
                                <label for="floatingInput11">電話</label>
                            </div>
                        </div>
                    </div>
                </section>
