                                    @foreach (var order in Model.OrderManagementList)
                                    {
                                        <tr>
                                            <td>#@order.TrackingNumber</td>
                                            <td>@order.OrderDatetime</td>
                                            <td>@order.FullName</td>
                                            <td>@order.CourseTitle</td>
                                            <td>@order.CourseLength 分鐘</td>
                                            <td>@order.CourseQuantity 堂</td>
                                            <td>NT$@order.SubtotalNTD.ToString("#,###")</td>
