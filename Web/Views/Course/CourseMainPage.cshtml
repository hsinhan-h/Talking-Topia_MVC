            <div class="lh-tutor-resume">
                <h3>履歷</h3>
                <div class="tutor-resume-content">
                    工作經驗
                    <ul>
                        @foreach (var work in Model.ExperienceList)
                        {
                            <li>@(work.StartYear) - @(work.EndYear) @(work.WorkTitle)</li>
                        }
                    </ul>
                </div>
                <div class="tutor-resume-content ">
                    教育背景
                    @foreach (var edu in Model.EducationDegree)
                    {
                        <ul class="d-flex">
                            <li>@edu.StudyStartYear - @edu.StudyEndYear  @edu.SchoolAndDepartment</li>
                            <i class="fa-solid fa-circle-check">已上傳證書</i>
                        </ul>
                    }                    
                </div>
                <div class="tutor-resume-content ">
                    證照證書
                    @foreach (var pro in Model.ProfessionList)
                    {
                        <ul class="d-flex">
                            <li>@pro.ProfessionName</li>
                            <i class="fa-solid fa-circle-check">已上傳證書</i>
                        </ul>
                    }
