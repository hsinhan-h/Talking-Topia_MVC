    <div class="col-md-8 lh-tutor-detailed-info">
        <h3 class="my-4 ">相似教師推薦</h3>
        <div class="tutor-recommend-carousel-wrapper w-100 my-2 position-relative">
            <div class="tutor-recommend-carousel">
                @foreach (var card in Model.TutorReconmmendCard)
                {
                    <partial name="_TutorRecommendPartial" model="card" />
                }
            </div>
            <div class="arrow_prev "><i class="fa-solid fa-angle-left"></i></div>
            <div class="arrow_next "><i class="fa-solid fa-angle-right"></i></div>
        </div>
    </div>

    <div class="modal fade comment-popout-view" id="moreInfoModal" tabindex="-1" aria-labelledby="moreInfoModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content " id="course-comment-modal">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">@Model.CourseTitle</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body course-comment-modal-body d-flex">
                    <div class="comment-modal-selection col-md-6 col-12">
                        <div class="comment-rating-section mb-4">
                            <h3>課程評價</h3>
                            <div class="comment-rating-group">
                                <div class="form-check" v-for="rating in [5, 4, 3, 2, 1]" :key="rating">
                                    <input class="form-check-input comment-rating-selection" type="checkbox"
                                           :id="'rating-' + rating" v-model="selectedRatings"
                                           :value="rating">
                                    <label class="form-check-label" :for="'rating-' + rating">
                                        <i class="fa-solid fa-star"></i>
                                        <p class="rating-level">{{ rating }}。{{ getRatingText(rating) }}</p>
                                        <p>{{ rating }}</p>
                                        <div class="progress" role="progressbar" aria-label="Basic example" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                            <div class="progress-bar" :style="{ width: getRatingPercentage(rating) + '%' }"></div>
                                        </div>
                                        <p class="comment-percentage">{{ getRatingPercentage(rating) }}%</p>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-12 comment-card-section h-100">
                        <p v-if="selectedRatings.length === 0 && courseReviews.length === 0">目前沒有評論</p>
                        <p v-else-if="filteredReviews.length === 0 && selectedRatings.length !== 0">目前沒有此分數的評論!!</p>
                        <div v-for="(review, index) in filteredReviews" :key="index" class="comment-card">
                            <div class="comment d-flex ">                                
                                <div class="user-icon">
                                    <svg class="w-100" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                                        <path d="M399 384.2C376.9 345.8 335.4 320 288 320l-64 0c-47.4 0-88.9 25.8-111 64.2c35.2 39.2 86.2 63.8 143 63.8s107.8-24.7 143-63.8zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zm256 16a72 72 0 1 0 0-144 72 72 0 1 0 0 144z" />
                                    </svg>
                                </div>
                                <div class="comment-info d-flex flex-column">
                                    <p class="user-name">{{ review.ReviewerName }}</p>
                                    <p class="comment-date">{{ review.ReviewDate }}</p>
                                    <p-rating v-model="review.CommentRating" readonly></p-rating>
                                </div>
                            </div>
                            <p>{{ review.ReviewContent }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>
